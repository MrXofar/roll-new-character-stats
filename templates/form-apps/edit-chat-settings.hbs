        <label><span>{{localize "RNCS.settings.ChatRemoveConfigureActorButton.Name"}}</span></label>
        <div class="rncs-form-fields">
            <input type="checkbox" name="rncs_ChatRemoveConfigureActorButton"
                value="{{ChatRemoveConfigureActorButton_value}}" data-dtype="Boolean" {{checked
