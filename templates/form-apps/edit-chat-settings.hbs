<form>
    <script>
        function Intitialize() {            
            if(game.system.id !== "dcc"){
                document.getElementById("rncs_chat_show_description")?.classList.add("rncs-display-none");
            }
        }
    </script>

    <div class="rncs-display-none">
        <div>ChatRemoveConfigureActorButton_value   :{{ChatRemoveConfigureActorButton_value   }}</div>
        <div>ChatShowDescription_value              :{{ChatShowDescription_value              }}</div>
        <div>ChatShowMethodText_value               :{{ChatShowMethodText_value               }}</div>
        <div>ChatShowResultsText_value              :{{ChatShowResultsText_value              }}</div>
